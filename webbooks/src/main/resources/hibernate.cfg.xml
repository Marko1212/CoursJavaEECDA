<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- properties -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/books?serverTimezone=UTC</property>
        <property name="hibernate.connection.username">forma</property>
        <property name="hibernate.connection.password">samsam</property>

        <property name="hibernate.hbm2ddl.auto">update</property>

<!--         Afficher les logs SQL / hibernate-->
        <property name="show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="use_sql_comments">true</property>

        <!-- mapping class -->
        <mapping class="com.formation.webbooks.entities.BookEntity"/>
        <mapping class="com.formation.webbooks.entities.IndustryIdentifiersEntity"/>
        <mapping class="com.formation.webbooks.entities.UserEntity"/>

    </session-factory>

</hibernate-configuration>