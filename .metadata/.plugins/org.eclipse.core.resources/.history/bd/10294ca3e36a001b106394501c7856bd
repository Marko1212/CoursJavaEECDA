package com.m2iformation;

import java.util.Scanner;

public class ExoEtoilesRectangle{
	
    public static void main (String [] args){
        Scanner clavier = new Scanner(System.in);
        System.out.println("Entrer 1 entier supérieur à 1 pour la hateur");
        int height = clavier.nextInt();
        System.out.println("Entrer 1 entier supérieur à 1 pour la largeur");
        int width = clavier.nextInt();
        
        draw_rectangle(height, width);  
    }
    public static void draw_rectangle(int m) {
        for(int star = 0; star < m; star++) System.out.print("*");
        System.out.print("\n*");
        for(int space = 0; space < m-2; space++) System.out.print(" ");
        System.out.print("*\n");
        for(int star = 0; star < m; star++) System.out.print("*");
        System.out.println();
    }
}
